<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/menu_llayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:id="@+id/cancel_rlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/ic_clear_black_24dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/weChat_llayout"
                style="@style/web_menu_item">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_wechat" />

                <TextView
                    style="@style/web_menu_item_textView"
                    android:text="微信" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sina_llayout"
                style="@style/web_menu_item">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_sina" />

                <TextView
                    style="@style/web_menu_item_textView"
                    android:text="微博" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ding_llayout"
                style="@style/web_menu_item">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_ding" />

                <TextView
                    style="@style/web_menu_item_textView"
                    android:text="钉钉" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>